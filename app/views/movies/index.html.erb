<div class="py-2">
  <div class="container">
    <% @movies.each_with_index do |movie, indx| %>
      <% if ((indx) % 3 == 0) %>
        <div class="row py-2">
      <% end %> 
      <div class="col-lg-4 col-md-4 col-sm-4">
        <a href="movies/<%= movie.id %>/theaters" class="movie-card">
          <div class="card bg-light" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= movie.name %></h5>
              <h6 class="card-subtitle mb-2 text-muted">
                Language :
                <%= movie.movie_type.humanize.capitalize %>
              </h6>
              <h6 class="card-subtitle mb-2 text-muted">
                Release Date : 
                <%= movie.release_date.strftime("%m/%d/%Y") %>
              </h6>
            </div>
          </div>
        </a>
      </div>
      <% if ((indx+1) % 3 == 0) %>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
