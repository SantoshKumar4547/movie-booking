<div class="container py-3">
	<div class="row border border-primary">
		<div class="col-lg-8 col-md-8 col-sm-8">
			<h3 class="display-6" id="movie_id" movie_id=<%= @movie.id %> >
				<%= @movie.try(:name) %>
			</h3>
			<p class="text-muted">
				<span><%= @movie.movie_type.humanize.capitalize %></span> |
				<span><%= @movie.release_date.strftime("%m/%d/%Y") %></span>
			</p>
		</div>
		<div class="col-lg-4 col-md-4 col-sm-4 py-3">
			<span class="text-muted">Booking Date :</span>
			<%= text_field_tag "datepicker",@date %>
		</div>
	</div>
</div>
<div id="theater_list">
<%= render partial: 'theater_list' %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#datepicker').datepicker({
    	startDate: '0'
    });

    $("#datepicker").change(function() {
    	var movie_id = $("#movie_id").attr("movie_id");
    	var date = $("#datepicker").val();
	    var current_location = window.location.href.split('?')[0]
	    window.location.href = current_location + "?date="+date;   	
		});
  });
</script>